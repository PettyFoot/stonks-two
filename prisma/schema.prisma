  FREE
  PREMIUM
  
  @@map("subscription_tier")
}

enum SubscriptionStatus {
  INACTIVE
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
  TRIALING
  
  @@map("subscription_status")
}

enum PaymentStatus {
  SUCCEEDED
  PENDING
  FAILED
  CANCELED
  REFUNDED
  
  @@map("payment_status")
}

